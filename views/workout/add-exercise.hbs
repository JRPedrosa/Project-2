<form class="card-template forms" action="/workout/{{id}}" method="POST">

    <label>Select exercise</label>
    <select name="exercise" class="capitalize">
        <option value="0">Select</option>
        {{#each allExercises }}
            <option value={{id}}>{{name}}</option>
        {{/each}}
    </select>



    <label>Day</label>
    <select name="day">
        <option value="0">Select</option>
        <option value="day1">Day 1</option>
        <option value="day2">Day 2</option>
        <option value="day3">Day 3</option>
        <option value="day4">Day 4</option>
        <option value="day5">Day 5</option>
        <option value="day6">Day 6</option>
        <option value="day7">Day 7</option>
    </select>

    <label>Sets</label>     
    <input type="number" name="sets" />
    


    <label>Reps</label>
    <input type="number" name="reps" />
    

    <button class="btn btn-outline-success button" type="submit">Create</button>

</form>


