<h2>Public Workout Feed</h2>


<form action="/workout-list" method="POST">
<label>Filter by Workout Goals</label>
   <select name="workoutGoals">
        <option value="0">Select</option>
        <option>Lose fat</option>
        <option>Get fit</option>
        <option>Gain muscle</option>
    </select>
   <button type="submit" >Done</button>    
   </form>
   


<div class="page-top"> 
</div>
<div class="container">
  <div class="row">
    <div class="col">
    </div>
<div class="col-6">
   


{{#each workouts}}
 <section class="card-template">

<a href="/workout-detail/{{id}}"><h4>{{title}}</h4></a> {{createdAt}}
<br>

<div class="workout-post"></div>
        <img src={{user.photo}} alt="user profile pic" style="height: 40px; width: 40px; border-radius:50px;"> 
        <p class="workout-posted-by"> by <a href="/profile/{{user.id}}">{{user.username}}</a>
        </p>
 <div>

<br>

<p class="workout-caption" Description: {{description}}>
</p>
<br>
<br>
<p  class= "workout-goals" Main Goal:  {{workoutGoals}} ></p>
<br>


<form action="/workout/{{id}}/like" method="POST">
        <button class="btn btn-outline-secondary" type="submit"> ðŸ’ª  {{like.length}}</button>
</form>

<br>
 
<h4>All Comments:</h4>
{{#each reviews}}
<p>Review: {{comment}}</p>
<p>by: {{name}} </p>
<br> <br> <br>
{{/each}}


<form action="/workout/{{id}}/comment" method="POST">
    <textarea name="comment" placeholder="Add a comment.."></textarea>
    <button type="submit">Comment</button>

</form>

<hr />
</div>
    </section>
  {{/each}} 
