<div class="col-6">
   


{{#each workouts}}
 <section class="card-template">

<div class = "workout-title">
<a href="/workout-detail/{{id}}"><h4>{{title}}</h4></a> 
        <small> {{date}} </small> 
         <hr>
</div>

<div class="workout-post">
        <img src={{user.photo}} alt="user profile pic" style="height: 40px; width: 40px; border-radius:50px;"> 
        <p class="workout-posted-by"> by <a href="/profile/{{user.id}}">{{user.username}}</a>
        </p>
 </div>

 <div class = "workout-description">
     <p class="workout-caption">{{description}}</p>
</div>


<div class = "workout-footer">
<p  class= "workout-goals"> {{workoutGoals}} </p>

<form action="/workout/{{id}}/like" method="POST">
        <button class="btn btn-outline-secondary like-button" type="submit"> ðŸ’ª  {{like.length}}</button>
</form>
</div>


